<% content_for :title, "Subjunct" %>
<% content_for :description, "Share your secrets." %>

<div id="banner">
  <div class="container">
    <h2>Write a secret message.  Guard it with secret knowledge.</h2>
    <form class="row compose-form">
      <div class="span4 offset2">
        <p><textarea name="question" class="question" placeholder="Security question.  &ldquo;Hey love, where did we eat last Friday?&rdquo;" required="required" ></textarea></p>
        <p><textarea name="answer" class="answer" placeholder="Answer.  &ldquo;The Cheesecake Factory&rdquo;" required="required" ></textarea></p>
      </div>
      <div class="span4">
        <p><textarea name="message" class="message" placeholder="Secret message.  &ldquo;You remembered!  See you at the theater tonight!&rdquo;" required="required" /></textarea></p>
        <p class="right"><input type="submit" class="submit" value="Submit" /></p>
      </div>
    </form>
  </div>
</div>

<div class="container clearfix" id="cards" ng-controller="PostsController">
  <div class="card-container" ng-repeat="post in posts">
    <div class="card" ng-click="click(post, $event)" ng-class="{true: 'expanded', false: 'contracted'}[post.expanded]">
      <p class="card-question">{{ post.question }}</p>
      <p class="card-date">{{ post.date }}</p>
      <form class="answer-form">
        <p class="clearfix"><input type="text" name="answer" class="answer" placeholder="Answer" required="required" /> <input type="submit" class="submit" value="Submit" /></p>
      </form>
    </div>
  </div>
</div>
